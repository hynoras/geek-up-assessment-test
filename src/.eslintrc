{
    "extends": ["prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "always",
                "semi": false,
                "trailingComma": "none",
                "tabWidth": 2,
                "endOfLine": "auto",
                "useTabs": false,
                "singleQuote": false,
                "printWidth": 120,
                "jsxSingleQuote": false,
                "bracketSameLine": false
            }
        ]
    }
}